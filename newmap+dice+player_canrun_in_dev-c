#include<iostream>
#include<string>
#include<fstream>
#include<ctime>
#include<cstdlib>
using namespace std;
string a[3][6];
int ice=0;
void mademap(int ,int );
void dice();
void update(int ,int );

int main(){
    srand(time(0));
    int i=0,j=0;
    cout<<"Input height: ";
    cin>>i;
    cout<<"Input lenght: ";
    cin>>j;
    for(int i=0;i<3;i++){
        for(int j=0;j<6;j++){
            a[i][j]=" ";
        }
    }
    mademap(i,j);
    system("pause");
    dice();
    cout<<"Your luck is: "<<ice<<endl;
    mademap(i,j);
    return 0;
}


void mademap(int n,int m){
    int x=0,y=1;
    int ber=0;
    int num=0;
    for(int h=0; h<m; h++){
        cout<<"- - - -";
    }
    x=0;
    cout<<endl;
    for(int k=0; k<n; k++){
        for(int i=0;i<3;i++){
            for(int p=0;p<m;p++){
                cout<<"|"; //ä»¢ÇÒ
                for(int j=0;j<6;j++){
                    if(ber==ice+(m*num)){
                        a[0][0]="*";
                    }
                    if(i==1 && j==3){
                    	char buffer[100];
                        a[1][2]=itoa(x,buffer,10);//to_string can't complie on dev-c++ because gcc(11) then use like this link-->
                        //http://www.cplusplus.com/reference/cstdlib/itoa/
                        //use this--> https://fresh2refresh.com/c-programming/c-type-casting/c-itoa-function/
						a[1][3]=itoa(y,buffer,10);
                        y++;
                    }
                    else if(i==1 && j==2){
                    	char buffer[100];
                        a[1][2]=a[1][2]=itoa(x,buffer,10);
                        a[1][3]=a[1][3]=itoa(y,buffer,10);
                    }
                        cout<<a[i][j];
                        if(y>9){
                            y=0;
                            x++;
                        }
                }
                a[0][0]=" ";
                ber++;
            }
            cout<<"|";
            cout<<endl;
        }
        for(int h=0; h<m; h++){
            cout<<"- - - -";
        }
        cout<<endl;
        num+=2;
    }
}

void dice(){
    ice =(rand()%6)+1;
}
